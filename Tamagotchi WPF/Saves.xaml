<Window x:Class="Tamagotchi_WPF.Saves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tamagotchi_WPF"
        mc:Ignorable="d"
        Title="Tamagotchi" Height="640" Width="500" ResizeMode="CanMinimize" Background="#BACFB3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="199"/>
            <RowDefinition Height="441"/>
        </Grid.RowDefinitions>
        <Image Source="Pictures/IMG_0296.png" Grid.Row="1" Stretch="UniformToFill" />

        <Border BorderBrush="#96AF8E" BorderThickness="0 0 0 5" Background="#B1D5DD">
            <Image Source="Pictures/IMG_0297 (1).png" />
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.ColumnSpan="2" Grid.Column="1">
                <Border  Width="182" Height="44" BorderBrush="#96AF8E" BorderThickness="0 0 0 3" Margin="0 50 0 0">


                    <!--<ItemsControl ItemsSource="{Binding Tama}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>-->
                    <Button HorizontalContentAlignment="Left" Padding="0" BorderThickness="0">
                        <Grid Width="182">
                            <Image Source="Pictures/btn2.png" Stretch="UniformToFill" />
                            <StackPanel Orientation="Vertical" >
                                <TextBlock Text="{Binding Navn}" Margin="5 0 0 0"/>
                                <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                                    <TextBlock Text="Lvl."/>
                                    <TextBlock Text="{Binding Level}" Margin="3 0 0 0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                    </Button>

                    <!--</DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>-->
                </Border>
            </StackPanel>


        </Grid>

    </Grid>
</Window>
